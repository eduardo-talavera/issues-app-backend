{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "lib": ["esnext"],
        "target": "ESNext",
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "strict": false,
        "sourceMap": true,
        "esModuleInterop": true,
        "declaration": true,
        "skipLibCheck": true,
        "baseUrl": "./src", 
        "paths": {
          "@/*": ["*"]
        },
    },
    "include": ["src/**/*.ts"],
    "exclude": [
      "node_modules",
      "**/*.test.ts",
      "**/*.spec.ts",
      "vitest.config.*",
      "__tests__",
      "coverage"
    ]
}